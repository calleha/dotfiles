# CLI audio visualizer

# Controls
# up/down	increase/decrease sensitivity
# left/right	increase/decrease bar width
# c/b		change foreground/background color
# r		reload configuration
# q/ctrl-c	quit cava

[general]

framerate = 144

[color]

# Colors can be one of seven predefined: black, blue, cyan, green, magenta, red, white, yellow.
# Or defined by hex code '#xxxxxx' (hex code must be within ''). User defined colors requires a
# terminal that can change color definitions such as Gnome-terminal or rxvt.
# background = black
foreground = magenta

[smoothing]

# Percentage value for integral smoothing. Takes values from 0 - 100.
# Higher values means smoother, but less precise. 0 to disable.
integral = 0

# Disables or enables the so-called "Monstercat smoothing" with or without "waves". Set to 0 to disable. 
monstercat = 0
waves = 0;
