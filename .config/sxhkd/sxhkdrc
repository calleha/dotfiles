# general syntax:
#
#[MODIFIER + ]*[@|!]KEYSYM
#    COMMAND

# dmenu (keybinding present in dwm config)
#super + x
#    dmenu_run

# terminal (keybinding present in dwm config)
#super + shift + Return
#    st
#super + control + Return
#    st -t 'st (floating)'

# emacs
super + e
    emacsclient -c

# file manager
super + m
    pcmanfm

# browser
super + shift + f
    firefox
super + control + f
    firefox --private-window

# screenshots
Print
    import -window root Pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H:%M')_$(echo $RANDOM).png
alt + Print
    import Pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H:%M')_$(echo $RANDOM).png

# passmenu
super + c
    passmenu -l 16
super + shift + c
    passmenu --type -l 16

# wifi script (networkmanager)
super + w ; f
    connecttowifi.sh

# set background
super + w ; p
    setbackground.sh

# set keyboard layout
alt + space
    setkeyboardlayout.sh

# brightness controls
XF86MonBrightnessUp
    xbacklight -steps 1 -time 0 -inc 5
XF86MonBrightnessUp
    xbacklight -steps 1 -time 0 -dec 5

# volume controls
XF86AudioLowerVolume
    amixer -q set Master 5%- && pkill -f ~/.local/bin/statusbar.sh && ~/.local/bin/statusbar.sh
XF86AudioRaiseVolume
    amixer -q set Master 5%+ && pkill -f ~/.local/bin/statusbar.sh && ~/.local/bin/statusbar.sh

# toggle mute
XF86AudioMute
    amixer -q set Master toggle && pkill -f ~/.local/bin/statusbar.sh && ~/.local/bin/statusbar.sh

# media player controls
XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next
    
XF86AudioPrev
    playerctl previous
    
XF86AudioStop
    playerctl stop
